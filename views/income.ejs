<body>
    <%- include('partials/dashboard.ejs') %>
    
      <div class="col-7 mt-5 ml-auto mr-auto p-0">
          <table class="table text-center">
              <thead class="thead-dark">
                <tr>
                  <th scope="col">#</th>
