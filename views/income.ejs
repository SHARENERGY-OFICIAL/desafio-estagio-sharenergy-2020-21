                  <td>
                      <% if(user.usinas){ %>
                        <%for(usina of user.usinas) {%> 
                      <%= usina.percentualUsina %>
                    </td>
                  <% let retorno = (usina.percentualUsina / 100) * receitaTotal %>
                  <td>
                      R$<%= retorno.toFixed(2) %> 
                  </td>
                  <% } %>
                  <% } %>  
                  
                </tr>
              <% } %> 
              </tbody>
            </table>
